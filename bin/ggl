#!/usr/bin/env ruby

system = `uname -s`
@search = ARGV
@query = ''

case system
when 'Darwin', "Darwin\n"
  @open_command = 'open'
else
  @open_command = 'xdg-open'
end

def search_for_query
  @search.each do |word|
    add_to_query(word)
  end
  system "#{@open_command} https://www.google.com/search?q=\"#{@query}\""
end

def search_for_images
  @search.delete(@search.first)
  @search.each do |word|
    add_to_query(word)
  end
  system "#{@open_command} \"https://www.google.com/search?q=#{@query}&tbm=isch\""
end

def search_youtube
  @search.delete(@search.first)
  @search.each do |word|
    add_to_query(word)
  end
  system "#{@open_command} https://www.youtube.com/results?search_query=\"#{@query}\""
end

def search_stack
  @search.delete(@search.first)
  @search.each do |word|
    if word == @search.last
      @query << word
    else
      @query << "#{word}+"
    end
  end
  system "#{@open_command} http://stackoverflow.com/search?q=#{@query}"
end

def add_to_query(word)
  if word == @search.last
    @query << word
  else
    @query << "#{word} "
  end
end

def usage
  puts <<-USAGE
 ggl - Google right from your command line

 Usage:

   ggl [query]
   ggl -i/--images [query]
   ggl -y/--youtube [query]
   ggl -s/--stack/--stackoverflow [query]

   ggl -h/--help

   USAGE
end

case @search.first
when '-i', '--images'
  search_for_images
when '-y', '--youtube'
  search_youtube
when '-s', '--stack', '--stackoverflow'
  search_stack
when '-h', '--help', nil
  usage
else
  search_for_query
end
